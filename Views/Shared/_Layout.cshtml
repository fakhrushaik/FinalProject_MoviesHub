@{
    var title = ViewData["Title"] as string ?? "MoviesHub";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title - MoviesHub</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" asp-controller="Home" asp-action="Index">🎬 MoviesHub</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="nav" class="collapse navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="AboutMovies">About Movies</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Genres">Genres</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="TopPicks">Top Picks</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Movies" asp-action="Index">Movies (DB)</a></li>
          <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Team">Our Team</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container">
    @RenderBody()
  </main>

  <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js" integrity="sha384-6h3k5YV7vZgE2wzvCkJzZwkS8QeN5b2qzS6o0hQbSg3QdX5eQv1v4qgAxj4J7R2x" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
@RenderSection("Scripts", required: false)

</body>
</html>

